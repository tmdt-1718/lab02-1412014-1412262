<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Simple login form</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
  <%= stylesheet_link_tag  'login' %>
  

  
</head>

<body>
  <div class="container">
  <div class="login">
    <h1 class="login-heading">
      <strong>Welcome.</strong> Please login.</h1>

      <%= form_with scope: :session, local: true do |f|%>
    
      <%= f.text_field :email , :placeholder=>"Email", class: "input-txt" %>
    
      <%= f.password_field :password , :placeholder=>"Password", class: "input-txt" %>
      <p><span style="color: red"><%=flash[:error]%></span></p>

      <div class="login-footer">
             <a href="#" class="lnk">
              <span class="icon icon--min"></span> 
              I've forgotten something
            </a>
            <button type="submit" class="btn btn--right">Sign in  </button></br>
             <a href="<%= new_user_path %>" class="lnk">
              <span class="icon icon--min"></span> 
              Create New Account?
            </a>
      </div>

      <% end %>

      
  </div>
</div>

</body>
</html>
